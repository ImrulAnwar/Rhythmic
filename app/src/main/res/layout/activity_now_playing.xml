<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activities.now_playing_activity.NowPlayingActivity">

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu"
            android:id="@+id/imageButton7"
            android:background="#00FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:layout_marginEnd="16dp" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_back"
            android:id="@+id/imageButton8"
            android:background="#00FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton7"
            android:layout_marginStart="32dp" />

    <SeekBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:foregroundTint="@color/black"
            android:thumbTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="31dp"
            app:layout_constraintBottom_toTopOf="@+id/imageButton"
            android:progressTint="@color/black" />

    <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:srcCompat="@drawable/ic_play"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageButton"
            android:foregroundTint="@color/white"
            android:background="@drawable/play_button_background"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="52dp"
            app:tint="@color/white"
            app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_next"
            android:id="@+id/imageButton2"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toStartOf="@+id/imageButton6" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_prev"
            android:id="@+id/imageButton3"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/imageButton"
            app:layout_constraintEnd_toStartOf="@+id/imageButton"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toEndOf="@+id/imageButton5" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_shuffle"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/imageButton5"
            android:background="#00FFFFFF"
            android:tint="@color/text_color_2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="70dp"
            android:layout_marginStart="32dp" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_loop"
            android:id="@+id/imageButton6"
            android:background="#00FFFFFF"
            android:tint="@color/text_color_2"
            android:layout_marginBottom="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="32dp" />

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_love"
            android:id="@+id/imageButton4"
            android:tint="@color/text_color_2"
            android:background="#00FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.469"
            app:layout_constraintEnd_toStartOf="@+id/cardView2" />

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton7"
            app:layout_constraintBottom_toTopOf="@+id/imageButton4"
            android:id="@+id/cardView2"
            app:cardCornerRadius="40dp">

        <ImageView
                android:layout_width="260dp"
                android:layout_height="260dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView2" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>